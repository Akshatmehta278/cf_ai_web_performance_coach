{
  "name": "cloudflare-ai-chat",
  "version": "1.0.0",
  "description": "AI-powered chat application on Cloudflare with TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute chat_history --file=./schema.sql",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": ["cloudflare", "workers", "ai", "chat", "llama", "typescript"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.78.0"
  },
  "dependencies": {}
}